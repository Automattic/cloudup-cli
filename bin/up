#!/usr/bin/env node

/**
 * Module dependencies.
 */

var program = require('commander')
  , Item = require('../lib/item')
  , up = require('..');

program
  .usage('[options] [file ...]')
  .parse(process.argv);

// files

var files = program.args;

var view = up.view();
files.forEach(function(file){
  var item = new Item({ name: file });
  setInterval(function(){
    if (item.progress >= 100) return;
    item.progress += 15;
    item.emit('progress');
  }, 30);
  view.add(item);
});

view.draw();
